<!--stylist-form.vtl-->
<h1>Hire a new stylist</h1>

<form action="/stylists" method="post">
  <label for="name">Stylist Name:</label>
  <input id="name" name="name" type="text">
  <label for="details">Stylist Details:</label>
  <input id="details" name="details" type="text">
  <button type="submit" class="btn btn-success">Hire New Stylist</button>
</form>
<!--stylist-form.vtl-->
